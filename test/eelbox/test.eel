import "SDL";

static results = [];

procedure run(filename)
{
	local r = [filename];
	try
	{
		try
		{
			FillRect();
			Flip();
		}
		ShowCursor(1);
		load(filename).main(filename);
		r[1] = nil;
	}
	except
	{
		local x = exception;
		try
			r[1] = exception_name(x);
		except
			r[1] = "\"" + (string)x + "\"";
		print("######################################\n");
		print("### \"", filename, "\" failed to run!\n");
		print("### It threw '", r[1], "'.\n");
		print("######################################\n");
	}
	results[sizeof results] = r;
}

export function main<args>
{
	run("ebtest.eel");
	run("draw.eel");
	run("bars.eel");
	run("balls.eel");
	run("balls2.eel");
 	run("pigs.eel");
 	run("pigs2.eel");
 	run("pigs3.eel");
	run("texttest.eel");
	run("guitest.eel");
	run("beep.eel");
	run("fmsynth.eel");
	run("addsynth.eel");
	run("fftsynth.eel");
	run("gltest.eel");
	run("glballs.eel");
	run("zstest.eel");
	print("==============================================\n");
	for local i = 0, sizeof results - 1
	{
		print("  \"", results[i][0], "\": ");
		if(results[i][1] == nil)
			print("OK\n");
		else
			print("exception ", results[i][1], "\n");
	}
	print("==============================================\n");
	return 0;
}
