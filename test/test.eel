static results = [];

procedure run(filename)
{
	local r = [filename];
	print("==============================================\n");
	try
	{
		load(filename).main(filename);
		r[1] = nil;
	}
	except
	{
		local x = exception;
		try
			r[1] = exception_name(x);
		except
			r[1] = "\"" + (string)x + "\"";
		print("######################################\n");
		print("### \"", filename, "\" failed to run!\n");
		print("### It threw '", r[1], "'.\n");
		print("######################################\n");
	}
	results[sizeof results] = r;
}

